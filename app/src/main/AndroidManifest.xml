<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vulpix.com.rw">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="vulpix.com.rw.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="vulpix.com.rw.activityes.DecryptActivity">
        </activity>
        <activity android:name="vulpix.com.rw.activityes.HappyActivity">
        </activity>

        <service android:enabled="true" android:name="vulpix.com.rw.services.MyService" />
        <service android:enabled="true" android:name="vulpix.com.rw.services.DecryptService" />
        <service android:enabled="true" android:name="vulpix.com.rw.services.EncryptService" />
    </application>

</manifest>